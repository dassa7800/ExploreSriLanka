<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@android:color/white"
    android:elevation="4dp"
    android:clipToOutline="true"
    android:layout_margin="16dp"
    android:layout_gravity="center">

    <!-- Number of Days Input -->
    <EditText
        android:id="@+id/days_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="Number of Days"
        android:layout_marginBottom="16dp"
        android:padding="12dp"
        android:background="@android:drawable/editbox_background"
        android:textSize="16sp"
        android:textColor="@android:color/black" />

    <!-- Preferences Spinner -->
    <Spinner
        android:id="@+id/preference_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:padding="12dp"
        android:background="@android:drawable/editbox_background" />

    <!-- Budget Constraint Input -->
    <EditText
        android:id="@+id/budget_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="numberDecimal"
        android:hint="Budget (in USD)"
        android:layout_marginBottom="16dp"
        android:padding="12dp"
        android:background="@android:drawable/editbox_background"
        android:textSize="16sp"
        android:textColor="@android:color/black" />

    <!-- Number of People Input -->
    <EditText
        android:id="@+id/people_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="Number of People"
        android:layout_marginBottom="16dp"
        android:padding="12dp"
        android:background="@android:drawable/editbox_background"
        android:textSize="16sp"
        android:textColor="@android:color/black" />

    <!-- Number of Rooms Input -->
    <EditText
        android:id="@+id/rooms_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="Number of Rooms"
        android:layout_marginBottom="16dp"
        android:padding="12dp"
        android:background="@android:drawable/editbox_background"
        android:textSize="16sp"
        android:textColor="@android:color/black" />

</LinearLayout>