<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center"
        android:background="@drawable/gradient_background">

        <!-- Welcome Message -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:background="#99FFFFFF"
            android:padding="20dp"
            android:elevation="2dp"
            android:clipToOutline="true">

            <TextView
                android:id="@+id/admin_home_welcome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome, Admin!"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#333333"/>
        </LinearLayout>

        <!-- Overview Text -->
        <TextView
            android:id="@+id/admin_overview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Manage your resources and bookings effectively. Access all the tools you need to oversee your operations."
            android:textSize="18sp"
            android:textColor="#666666"
            android:textAlignment="center"
            android:padding="16dp"
            android:background="#99FFFFFF"
            android:elevation="2dp"
            android:layout_marginBottom="24dp"/>

        <!-- Button to View Destinations List (Explore Page) -->
        <Button
            android:id="@+id/view_destinations_list_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Destinations List"
            android:textColor="#FFFFFF"
            android:background="#6200EE"
            android:padding="12dp"
            android:layout_marginBottom="24dp"/>

        <!-- Button to View Hotel List (Bookings Page) -->
        <Button
            android:id="@+id/view_hotel_list_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="View Hotel List"
            android:textColor="#FFFFFF"
            android:background="#6200EE"
            android:padding="12dp"
            android:layout_marginBottom="24dp"/>

    </LinearLayout>

</ScrollView>